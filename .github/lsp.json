{
  "lspServers": {
    "csharp": {
      "command": "dotnet",
      "args": ["tool", "run", "csharp-ls", "--solution", "GitHub.Copilot.SDK.sln"],
      "fileExtensions": {
        ".cs": "csharp"
      },
      "projectRootFiles": ["GitHub.Copilot.SDK.sln"],
      "rootPath": "dotnet"
    },
    "go": {
      "command": "${HOME}/go/bin/gopls",
      "args": ["serve"],
      "fileExtensions": {
        ".go": "go"
      },
      "projectRootFiles": ["go.mod", "go.sum"],
      "rootPath": "go"
    }
  }
}
